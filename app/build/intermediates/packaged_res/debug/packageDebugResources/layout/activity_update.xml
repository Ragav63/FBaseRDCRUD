<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:background="@color/salmon"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".UpdateActivity">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        app:cardCornerRadius="30dp"
        app:cardElevation="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            android:padding="20dp"
            android:background="@drawable/salmon_border">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Update Data"
                android:textSize="30sp"
                android:textAlignment="center"
                android:textColor="@color/salmon"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:src="@drawable/uplimage"
                android:id="@+id/updateImage"
                android:scaleType="fitCenter"/>

            <EditText
                android:id="@+id/updateTopicEdt"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/salmon_border"
                android:layout_marginTop="20dp"
                android:padding="10dp"
                android:hint="Enter Topic Name"
                android:textSize="16sp"
                android:textColor="@color/salmon"
                android:textColorHint="@color/salmon"
                android:gravity="start|center_vertical"/>

            <EditText
                android:id="@+id/updateDescEdt"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="@drawable/salmon_border"
                android:layout_marginTop="20dp"
                android:padding="16dp"
                android:hint="Enter Description"
                android:textSize="16sp"
                android:textColor="@color/salmon"
                android:textColorHint="@color/salmon"
                android:gravity="start|center_vertical"/>

            <EditText
                android:id="@+id/updateLangEdt"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/salmon_border"
                android:layout_marginTop="20dp"
                android:padding="10dp"
                android:hint="Enter Language"
                android:textSize="16sp"
                android:textColor="@color/salmon"
                android:textColorHint="@color/salmon"
                android:gravity="start|center_vertical"/>

            <Button
                android:id="@+id/updateBtn"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:text="Update"
                android:textSize="16sp"
                android:textColor="@color/white"
                app:cornerRadius="20dp"/>


        </LinearLayout>

    </androidx.cardview.widget.CardView>

</ScrollView>